<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/white">
    <!--left-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/item_rant_item_btn_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_circle"
            android:tint="@color/white"
            android:src="@drawable/ic_rant_up"/>
        <TextView
            android:id="@+id/item_rant_item_tv_value"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimaryLight"

            android:textStyle="bold"
            tools:text="11"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/item_rant_item_btn_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_circle"
            android:tint="@color/white"
            android:src="@drawable/ic_rant_down"/>


    </LinearLayout>

    <!--Right-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <!--Content-->
        <TextView
            android:id="@+id/item_rant_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:alpha="0.87"
            tools:text="这里我们想。"/>

        <!--extra info-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <!--User info-->
            <TextView
                android:id="@+id/item_rant_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                tools:text="达康书记"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_rant_item_tv_sendBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="发表于"
                android:textColor="@color/colorPrimaryLight"
                android:layout_toEndOf="@id/item_rant_item_tv_name"/>

            <TextView
                android:id="@+id/item_rant_item_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="两天前"
                android:textColor="@color/colorPrimaryLight"
                android:layout_toEndOf="@id/item_rant_item_tv_sendBy"/>

            <TextView
                android:id="@+id/item_rant_item_tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:alpha="0.54"
                tools:text="7"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_rant_comment"
                android:alpha="0.87"
                android:layout_toStartOf="@id/item_rant_item_tv_comment_num"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>